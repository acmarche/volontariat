{% extends '@Volontariat/admin/base.html.twig' %}

{% block body -%}

        <h3>Liste des activitées</h3>

    <div class="alert alert-info">Liste des activitées encodées par les associations</div>

    {% if entities | length > 0 %}
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Association</th>
            </tr>
            </thead>
            <tbody>
            {% for activite in entities %}
                <tr>
                    <td>
                        <a href="{{ path('volontariat_admin_activite_show', { 'id': activite.id }) }}">{{ activite }}</a>
                    </td>
                    <td>{{ activite.association }}</td>
                    <td>
                        {% if activite.valider %}
                            Oui
                        {% else %}
                            Non
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun</p>
    {% endif %}

{% endblock %}

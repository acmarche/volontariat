<div class="hidden-print text-right">
    <br/>
    <a id="edit_enfant" href="#" class="btn btn-danger btn-sm" role="button" data-toggle="modal"
       data-target="#myModal">
        <i class="fas fa-trash-alt"></i> Supprimer l'Association</a>
</div>
<!-- Modal -->

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Suppression d'une association</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Etes vous sur de vouloir <strong>supprimer</strong> <br/> <strong>{{ association | upper }}
                        ? </strong>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                {{ form(delete_form) }}
            </div>
        </div>
    </div>
</div>

{{ form_start(form, { 'attr': {'class': 'well'}}) }}
{{ form_errors(form) }}

<div class="form-row">
    <div class="col-md-6">

        {{ form_row(form.nom) }}

        <div class="form-row">
            <div class="col-md-6">
                {{ form_row(form.address) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.number) }}
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6">
                {{ form_row(form.postalCode) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.city) }}
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-4">
                {{ form_row(form.phone) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.mobile) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.fax) }}
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.web_site) }}
            </div>
        </div>

        {{ form_row(form.description) }}
        {{ form_row(form.requirement) }}

    </div>

    <div class="col-lg-6 col-md-6">
        {{ form_row(form.secteurs) }}
        {{ form_row(form.place) }}
        {{ form_row(form.contact) }}
        {{ form_row(form.valider) }}
    </div>
</div>

<div class="form-row">
    <div class="col-md-6">
        {{ form_row(form.fileFile) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.fileDescriptif) }}
    </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
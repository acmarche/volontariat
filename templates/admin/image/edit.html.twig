{% extends '@Volontariat/admin/base.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">Gestion des images pour {{ association }}</h3>
        <div class="card-body">

            <a href="{{ path('volontariat_admin_association_show', { 'id': association.id }) }}" class="btn btn-primary"
               role="button"><i class="fas fa-list"></i> Retour Ã  l'association</a>
            <br/><br/>

            {{ form_start(form, { 'attr': {'id': 'formdrop','class': 'mt-3 dropzone', 'data-controller': 'dropzone'}}) }}
            {{ form_errors(form) }}

            <div class="dz-message d-flex flex-column">
                <i class="fas fa-upload"></i> Charger les images
            </div>

            {{ form_end(form) }}

            {% if images | length > 0 %}
                {%  include "@Volontariat/admin/image/_images.html.twig" %}
            {% else %}
                <p class="text-warning">Aucune image actuellement</p>
            {% endif %}
        </div>
    </div>

{% endblock %}



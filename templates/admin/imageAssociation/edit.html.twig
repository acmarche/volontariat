{% extends '@Volontariat/admin/base.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">Gestion des images pour {{ association }}</h3>
        <div class="card-body">
            {{ form_start(form, { 'attr': {'class': 'mt-3', 'enctype': 'multipart/form-data'}}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary mt-3"><i class="ti ti-image-up"></i> Envoyer les images</button>
            {{ form_end(form) }}

            {% if images | length > 0 %}
                {% include "@Volontariat/admin/imageAssociation/_images.html.twig" %}
            {% else %}
                <p class="text-warning">Aucune image actuellement</p>
            {% endif %}
        </div>
        <div class="card-footer">
            <a href="{{ path('volontariat_admin_association_show', { 'id': association.id }) }}" class="btn btn-primary"
               role="button"><i class="ti ti-list"></i> Retour Ã  l' association</a>
        </div>
    </div>

{% endblock %}

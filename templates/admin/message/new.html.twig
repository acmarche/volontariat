{% extends "admin/base.html.twig" %}

{% block title %}Volontaires{% endblock %}
   
{% block body %}

    <h3>Nouveau message</h3>

    <div class="alert alert-info">
        Insérez {urltoken} si vous voulez mettre l'url permettant de se connecter automatiquement
    </div>

    {% if query %}
        <p>{{ destinataires | length }} destinataires</p>
    {% endif %}

    {{ form(form) }}

    <a href="{{ path('volontariat_admin_message') }}">
        <span class="fas fa-list"></span> Annuler et retour à la liste
    </a>

{% endblock %}
{% extends '@Volontariat/admin/base.html.twig' %}

{% block body -%}

    <div class="card">
        <h3 class="card-header">Liste des pages</h3>
        <div class="card-body">
            <a href="{{ path('volontariat_admin_page_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> Ajouter une page
            </a> <br/><br/>
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td><a href="{{ path('volontariat_admin_page_show', { 'id': page.id }) }}">{{ page }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

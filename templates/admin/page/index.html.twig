{% extends 'admin/base.html.twig' %}

{% block body -%}

    <h3>Liste des pages</h3>

    <a href="{{ path('volontariat_admin_page_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter une page
    </a> <br/><br/>


    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('volontariat_admin_page_show', { 'id': page.id }) }}">{{ page }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

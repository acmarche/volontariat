{% extends '@Volontariat/admin/base.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">{{ secteur }}</h3>
        <div class="card-body">
            <p>Afficher : {{ secteur.display }}</p>
            <p class="text-muted">
                {{ secteur.description }}
            </p>

            {% include '@Volontariat/admin/secteur/actions.html.twig' %}

            {% include '@Volontariat/admin/secteur/volontaires.html.twig' with {'volontaires': secteur.volontaires } %}

            {% include '@Volontariat/admin/secteur/associations.html.twig' with {'associations': secteur.associations } %}

            {% include '@Volontariat/admin/secteur/delete.html.twig' %}
        </div>
    </div>
{% endblock %}

{% extends '@Volontariat/admin/base.html.twig' %}

{% block body -%}

    <h3>Liste des utilisateurs</h3>

    <a href="{{ path('volontariat_admin_utilisateur_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un utilisateur
    </a> <br/><br/>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Nb volontaire</th>
            <th>Nb association</th>
            <th>Token</th>
        </tr>
        </thead>
        <tbody>
        {% for utilisateur in users %}
            {% set class="" %}
            {% if utilisateur.countVolontaires == 0 and utilisateur.countAssociations == 0 %}
             {% set class="table-warning" %}
                {% else %} {% set class="" %}
            {% endif %}
            <tr class="{{ class }}">
                <td>
                    <a href="{{ path('volontariat_admin_utilisateur_show', { 'id': utilisateur.id }) }}">
                        {{ utilisateur.nom }} {{ utilisateur.prenom }}
                    </a>
                </td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.countVolontaires }}</td>
                <td>{{ utilisateur.countAssociations }}</td>
                <td>
                    {% if utilisateur.token %}
                        <a href="{{ path('volontariat_token_show', {'value':  utilisateur.token.value}) }}">Token</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

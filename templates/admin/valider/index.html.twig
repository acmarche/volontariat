{% extends "admin/base.html.twig" %}
{% block title %}Volontaires{% endblock %}

{% block body -%}

        <h3>Liste des associations et activitées non validées</h3>

    <h4>Associations</h4>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Localité</th>
            <th>Inscrite le</th>
            <th>Encodé par</th>
        </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>
                    <a href="{{ path('volontariat_admin_association_valider', { 'id': association.id }) }}"
                       title="Voir"> {{ association }}
                    </a>
                </td>
                <td>{{ association.city }}</td>
                <td>
                    {{ association.createdAt|date("d-m-Y") }}
                </td>
                <td>
                    {{ association.user }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h4>Activités</h4>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Inscrite le</th>
            <th>Encodé par</th>
        </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>
                    <a href="{{ path('volontariat_admin_activite_valider', { 'id': activite.id }) }}"
                       title="Voir"> {{ activite }}
                    </a>
                </td>
                <td>
                    {{ activite.createdAt|date("d-m-Y") }}
                </td>
                <td>
                    {{ activite.user }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
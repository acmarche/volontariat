{% extends 'admin/base.html.twig' %}

{% block body -%}

        <h3>Liste des véhicules</h3>

    <a href="{{ path('volontariat_admin_vehicule_new') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un véhicule
    </a> <br/><br/>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nombre de volontaires</th>
        </tr>
        </thead>
        <tbody>
        {% for vehicule in entities %}
            <tr>
                <td><a href="{{ path('volontariat_admin_vehicule_show', { 'id': vehicule.id }) }}">{{ vehicule }}</a></td>
                <td>{{ vehicule.volontaires|length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

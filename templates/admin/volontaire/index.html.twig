{% extends "admin/base.html.twig" %}
{% block title %}Volontaires{% endblock %}

{% block body -%}

    <h3>Liste des {{ volontaires | length }} volontaires</h3>

    {{ include('admin/search/volontaire.html.twig') }}


    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Localité</th>
            <th>Email</th>
            <th>Inscrit le</th>
            <th>Géré par</th>
            <th>Note</th>
        </tr>
        </thead>
        <tbody>
        {% for volontaire in volontaires %}
            <tr>
                <td>
                    <a href="{{ path('volontariat_admin_volontaire_show', { 'id': volontaire.id }) }}"
                       title="Voir"> {{ volontaire.name }} {{ volontaire.surname }}
                    </a>
                </td>
                <td>{{ volontaire.city }}</td>
                <td>
                    {% if volontaire.user %}
                        {{ volontaire.user.email }}
                    {% endif %}
                </td>
                <td>
                    {{ volontaire.createdAt|date("d-m-Y") }}
                </td>
                <td>
                    {{ volontaire.user }}
                </td>
                <td>
                    {% if volontaire.notes| length > 0 %}
                        <i class="fas fa-check"></i>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

                        </svg>
                        <span class="ml-2 w-0 flex-1 truncate">
                            <a href="{{ path('volontariat_secteur_show', {'id': secteur.id}) }}">{{ secteur.name }}</a>
                        </span>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </dd>
</div>

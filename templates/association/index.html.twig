{% extends '@Volontariat/base.html.twig' %}
{% block title %}Associations{% endblock %}
{% block body %}

    <div class="bg-white py-8 sm:py-12">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:mx-0 border-b border-gray-200 pb-5">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Nos {{ associations|length }} associations
                </h2>
                <p class="mt-4 text-lg leading-8 text-gray-600">
                    Découvrez les associations qui font vivre le volontariat dans notre région
                </p>
            </div>

            {% if associations|length == 0 %}
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucun résultat</h3>
                    <p class="mt-1 text-sm text-gray-500">Essayez avec d'autres critères de recherche.</p>
                </div>
            {% else %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for association in associations %}
                        {% set url = asset('bundles/acmarchevolontariat/images/logo1-default.png') %}
                        {% if association.imageName %}
                            {% set url = vich_uploader_asset(association, 'image') | imagine_filter('acmarche_volontariat_400_270') %}
                        {% elseif association.firstImage %}
                            {% set url = association.firstImage.url | imagine_filter('acmarche_volontariat_400_270') %}
                        {% endif %}

                        <a href="{{ path('volontariat_association_show', {'slug': association.slug}) }}"
                           class="group block bg-gray-50 rounded-xl overflow-hidden hover:bg-emerald-50 transition-all duration-300 border border-transparent hover:border-emerald-200 hover:shadow-lg">
                            <div class="aspect-[3/2] w-full overflow-hidden">
                                <img src="{{ url }}"
                                     alt="{{ association.name }}"
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                            </div>
                            <div class="p-5">
                                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-emerald-700 transition-colors">
                                    {{ association.name }}
                                </h3>
                                <p class="mt-1 text-sm font-medium text-gray-500 flex items-center">
                                    <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    </svg>
                                    {{ association.city }}
                                </p>
                                {% if association.secteurs|length > 0 %}
                                    <div class="mt-3 flex flex-wrap gap-1">
                                        {% for secteur in association.secteurs|slice(0, 3) %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-emerald-100 text-emerald-700">
                                                {{ secteur.name }}
                                            </span>
                                        {% endfor %}
                                        {% if association.secteurs|length > 3 %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
                                                +{{ association.secteurs|length - 3 }}
                                            </span>
                                        {% endif %}
                                    </div>
                                {% endif %}
                                {% if association.description %}
                                    <p class="mt-3 text-sm text-gray-600 line-clamp-3">
                                        {{ association.description|striptags|u.truncate(200, '...') }}
                                    </p>
                                {% endif %}
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

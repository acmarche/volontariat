{% extends '@Volontariat/base.html.twig' %}
{% block title %}Modifier mon association{% endblock %}
{% block body %}

    <div class="max-w-3xl mx-auto px-4 py-6 sm:px-6 lg:px-8">

        <h1 class="text-2xl font-bold text-gray-900 mb-6 sm:text-3xl">
            Modifier mon association
        </h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'aria-label': 'Formulaire de modification de l\'association'}}) }}
        {{ form_errors(form) }}

        <div class="space-y-6">

            {# ── Informations ── #}
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <fieldset class="px-4 py-6 sm:px-6 sm:py-8">
                    <legend class="text-lg font-semibold text-gray-900 mb-1">Informations</legend>
                    <p class="text-sm text-gray-500 mb-6">Ces informations sont consultables sur le site.</p>

                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.description) }}
                            {{ form_widget(form.description, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'rows': 8,
                                'aria-required': 'true'
                            }}) }}
                            {{ form_help(form.description, {'help_attr': {'class': 'mt-1 text-sm text-gray-500'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.requirement, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.requirement) }}
                            {{ form_widget(form.requirement, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'rows': 5
                            }}) }}
                            {{ form_help(form.requirement, {'help_attr': {'class': 'mt-1 text-sm text-gray-500'}}) }}
                        </div>

                        <div>
                            {{ form_label(form.image, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.image) }}
                            <div class="mt-1 flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 py-8">
                                <div class="space-y-2 text-center">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none"
                                         viewBox="0 0 48 48" aria-hidden="true">
                                        <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02"
                                              stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    {{ form_widget(form.image) }}
                                    <p class="text-xs text-gray-500">PNG, JPG, GIF max 10MB</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            {# ── Coordonnées ── #}
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <fieldset class="px-4 py-6 sm:px-6 sm:py-8">
                    <legend class="text-lg font-semibold text-gray-900 mb-6">Coordonnées</legend>

                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div class="sm:col-span-2">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'organization',
                                'aria-required': 'true'
                            }}) }}
                        </div>

                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'email',
                                'aria-required': 'true'
                            }}) }}
                        </div>

                        <div>
                            {{ form_label(form.web_site, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.web_site) }}
                            {{ form_widget(form.web_site, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'url'
                            }}) }}
                        </div>

                        <div>
                            {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.phone) }}
                            {{ form_widget(form.phone, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'tel'
                            }}) }}
                        </div>

                        <div>
                            {{ form_label(form.mobile, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.mobile) }}
                            {{ form_widget(form.mobile, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'tel'
                            }}) }}
                        </div>

                        <div class="sm:col-span-2">
                            {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.address) }}
                            {{ form_widget(form.address, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'street-address',
                                'aria-required': 'true'
                            }}) }}
                        </div>

                        <div>
                            {{ form_label(form.postalCode, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.postalCode) }}
                            {{ form_widget(form.postalCode, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'postal-code',
                                'aria-required': 'true'
                            }}) }}
                        </div>

                        <div>
                            {{ form_label(form.city, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-900 mb-1'}}) }}
                            {{ form_errors(form.city) }}
                            {{ form_widget(form.city, {'attr': {
                                'class': 'block w-full rounded-md border-0 px-3 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 text-base sm:text-sm sm:leading-6',
                                'autocomplete': 'address-level2',
                                'aria-required': 'true'
                            }}) }}
                        </div>
                    </div>
                </fieldset>
            </div>

            {# ── Notifications ── #}
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <fieldset class="px-4 py-6 sm:px-6 sm:py-8">
                    <legend class="text-lg font-semibold text-gray-900 mb-4">Notifications par courriel</legend>

                    <div class="space-y-4">
                        <div class="flex items-start gap-3">
                            <div class="flex h-6 items-center">
                                {{ form_widget(form.notification_new_voluntary, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-2 focus:ring-green-600'}}) }}
                            </div>
                            <div class="text-sm leading-6">
                                {{ form_errors(form.notification_new_voluntary) }}
                                {{ form_label(form.notification_new_voluntary, null, {'label_attr': {'class': 'font-medium text-gray-900'}}) }}
                                {{ form_help(form.notification_new_voluntary, {'help_attr': {'class': 'text-gray-500'}}) }}
                            </div>
                        </div>

                        <div class="flex items-start gap-3">
                            <div class="flex h-6 items-center">
                                {{ form_widget(form.notification_message_association, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-2 focus:ring-green-600'}}) }}
                            </div>
                            <div class="text-sm leading-6">
                                {{ form_errors(form.notification_message_association) }}
                                {{ form_label(form.notification_message_association, null, {'label_attr': {'class': 'font-medium text-gray-900'}}) }}
                                {{ form_help(form.notification_message_association, {'help_attr': {'class': 'text-gray-500'}}) }}
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            {# ── Secteurs ── #}
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <fieldset class="px-4 py-6 sm:px-6 sm:py-8">
                    <legend class="text-lg font-semibold text-gray-900 mb-4">Secteurs d'activités</legend>
                    <div class="grid grid-cols-1 gap-3 sm:grid-cols-2">
                        {% for secteur in form.secteurs %}
                            <div class="flex items-center gap-2">
                                {{ form_widget(secteur, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-2 focus:ring-green-600'}}) }}
                                {{ form_label(secteur, null, {'label_attr': {'class': 'text-sm font-medium text-gray-900'}}) }}
                            </div>
                        {% endfor %}
                    </div>
                </fieldset>
            </div>

            {# ── Submit ── #}
            <div class="flex flex-col sm:flex-row sm:justify-end">
                <button type="submit"
                        class="w-full sm:w-auto inline-flex justify-center rounded-md bg-green-default px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-green-light focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2 sm:py-2 sm:text-sm">
                    Sauvegarder
                </button>
            </div>

        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

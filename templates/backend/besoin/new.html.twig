{% extends '@Volontariat/base.html.twig' %}
{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="space-y-12 sm:space-y-16">
        <div>
            <h2 class="text-base font-semibold leading-7 text-gray-900">Publier une annonce</h2>
            <p class="mt-1 max-w-2xl  leading-6 text-gray-600">
                Un mail sera envoy√© aux volontaires pour les informer de votre annonce de volontariat
            </p>

            <div
                class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                    {{ form_errors(form.name) }}
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <div
                            class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                            {{ form_widget(form.name, {'attr': {'class': 'block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm: sm:leading-6'}}) }}
                        </div>
                    </div>
                </div>

                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    {{ form_label(form.requirement, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                    {{ form_errors(form.requirement) }}
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        {{ form_widget(form.requirement, {'attr': {'class': 'block w-full max-w-2xl rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm: sm:leading-6'}}) }}
                        <p class="mt-3  leading-6 text-gray-600">En quoi consiste le travail</p>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <h2 class="text-base font-semibold leading-7 text-gray-900">Information</h2>
            <p class="mt-1 max-w-2xl  leading-6 text-gray-600">

            </p>

            <div
                class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    {{ form_label(form.date_begin, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                    {{ form_errors(form.date_begin) }}
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        {{ form_widget(form.date_begin, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm: sm:leading-6'}}) }}
                    </div>
                </div>

                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    {{ form_label(form.date_end, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                    {{ form_errors(form.date_end) }}
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        {{ form_widget(form.date_end, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm: sm:leading-6'}}) }}
                    </div>
                </div>

                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    {{ form_label(form.period, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                    {{ form_errors(form.period) }}
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        {{ form_widget(form.period, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-md sm: sm:leading-6'}}) }}
                    </div>
                </div>

                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    {{ form_label(form.place, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                    {{ form_errors(form.place) }}
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        {{ form_widget(form.place, {'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-md sm: sm:leading-6'}}) }}
                    </div>
                </div>

                {% if form.forceSend is defined %}
                    <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                        {{ form_label(form.forceSend, null, {'label_attr': {'class': 'block  font-medium leading-6 text-gray-900 sm:pt-1.5'}}) }}
                        {{ form_errors(form.forceSend) }}
                        <div class="mt-2 sm:col-span-2 sm:mt-0">
                            {{ form_widget(form.forceSend, {'attr': {'class': 'block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-md sm: sm:leading-6'}}) }}
                            <p class="mt-3  leading-6 text-gray-600">{{ form_help(form.forceSend) }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
        <button type="button" class=" font-semibold leading-6 text-gray-900">Annuler</button>
        <button type="submit"
                class="inline-flex justify-center rounded-md bg-green-default px-3 py-2  font-semibold text-white shadow-sm hover:bg-green-light focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            Sauvegarder
        </button>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% extends '@Volontariat/base.html.twig' %}
{% block title %}Besoins en volontariat{% endblock %}
{% block body %}

    <div class="bg-white py-8 sm:py-12">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl lg:mx-0 border-b border-gray-200 pb-5">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Les dernières annonces
                </h2>
                <p class="mt-4 text-lg leading-8 text-gray-600">
                    Les associations ont besoin de vous ! Découvrez {{ besoins|length }} annonce{{ besoins|length > 1 ? 's' : '' }} en cours.
                </p>
            </div>

            {% if besoins|length == 0 %}
                <div class="text-center py-16">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune annonce pour le moment</h3>
                    <p class="mt-1 text-sm text-gray-500">Revenez bientôt pour découvrir les nouveaux besoins.</p>
                </div>
            {% else %}
                <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% for besoin in besoins %}
                        <a href="{{ path('volontariat_besoin_show', {'id': besoin.id}) }}"
                           class="group block bg-gray-50 rounded-xl p-6 hover:bg-emerald-50 transition-all duration-300 border border-transparent hover:border-emerald-200 hover:shadow-lg">
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0 inline-flex items-center justify-center w-12 h-12 rounded-2xl bg-emerald-100 text-emerald-600 group-hover:bg-emerald-200 transition-colors">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/>
                                    </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h3 class="text-base font-semibold text-gray-900 group-hover:text-emerald-700 transition-colors">
                                        {{ besoin.name }}
                                    </h3>
                                    <p class="mt-1 text-sm font-medium text-amber-700 flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                        </svg>
                                        {{ besoin.association }}
                                    </p>
                                    <div class="mt-3 flex flex-wrap items-center gap-2">
                                        {% if besoin.dateBegin %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                </svg>
                                                Du {{ besoin.dateBegin|date('d/m/Y') }}
                                            </span>
                                        {% endif %}
                                        {% if besoin.dateEnd %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                </svg>
                                                Au {{ besoin.dateEnd|date('d/m/Y') }}
                                            </span>
                                        {% endif %}
                                        {% if besoin.place %}
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                </svg>
                                                {{ besoin.place|striptags|u.truncate(40, '...') }}
                                            </span>
                                        {% endif %}
                                    </div>
                                    {% if besoin.requirement %}
                                        <p class="mt-3 text-sm text-gray-600 line-clamp-2">
                                            {{ besoin.requirement|striptags|u.truncate(150, '...') }}
                                        </p>
                                    {% endif %}
                                </div>
                                <svg class="flex-shrink-0 w-5 h-5 text-gray-400 group-hover:text-emerald-600 transition-all group-hover:translate-x-1 mt-1"
                                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M9 5l7 7-7 7"/>
                                </svg>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

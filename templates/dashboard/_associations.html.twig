<div class="card border-0 g-mb-40">
    <!-- Panel Header -->
    <div class="card-header d-flex align-items-center justify-content-between g-bg-gray-light-v5 border-0 g-mb-15">
        <h3 class="h6 mb-0">
            <i class="icon-heart g-pos-rel g-top-1 g-mr-5"></i> Mon association
        </h3>
        <div class="dropdown g-mb-10 g-mb-0--md">
                  <span class="d-block g-color-primary--hover g-cursor-pointer g-mr-minus-5 g-pa-5"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="icon-options-vertical g-pos-rel g-top-1"></i>
                    </span>
            <div class="dropdown-menu dropdown-menu-right rounded-0 g-mt-10">
                <a class="dropdown-item g-px-10"
                   href="{{ path('volontariat_backend_association_new') }}">
                    <i class="icon-layers g-font-size-12 g-color-gray-dark-v5 g-mr-5"></i>
                    Ajouter
                </a>
                <!--      <a class="dropdown-item g-px-10" href="#!">
                          <i class="icon-wallet g-font-size-12 g-color-gray-dark-v5 g-mr-5"></i>
                          Supprimer
                      </a>
                      <a class="dropdown-item g-px-10" href="#!">
                          <i class="icon-fire g-font-size-12 g-color-gray-dark-v5 g-mr-5"></i>
                          Reports
                      </a>
                      <a class="dropdown-item g-px-10" href="#!">
                          <i class="icon-settings g-font-size-12 g-color-gray-dark-v5 g-mr-5"></i>
                          Users Setting
                      </a>

                      <div class="dropdown-divider"></div>

                      <a class="dropdown-item g-px-10" href="#!">
                          <i class="icon-plus g-font-size-12 g-color-gray-dark-v5 g-mr-5"></i>
                          View More
                      </a>-->
            </div>
        </div>
    </div>
    <!-- End Panel Header -->

    <!-- Panel Body -->
    <div class="card-block g-pa-0">

        {% for association in associations %}
            <div class="row mb-2">
                <div class="col-md-4 g-mb-30 g-mb-0--md">
                    <!-- Figure -->
                    <figure class="g-bg-white g-brd-around g-brd-gray-light-v4 g-brd-cyan--hover g-transition-0_2 text-center">
                        <div class="g-py-40 g-px-20">
                            <!-- Figure Image -->
                            {% if association.imageName %}
                                <img class="g-width-100 g-height-100 rounded-circle g-mb-20"
                                     src="{{ association.imageName | acmarche_volontariat_download_image(association) | imagine_filter('acmarche_volontariat_thumb') }}"
                                     alt="Image Description">
                            {% else %}
                                <img class="g-width-100 g-height-100 rounded-circle g-mb-20"
                                     src="{{ asset('assets/img-temp/125x125/img1.jpg') }}"
                                     alt="Image Description">
                            {% endif %}

                            <!-- Figure Image -->

                            <!-- Figure Info -->
                            <h4 class="h5 g-mb-5">
                                <a href="{{ path('volontariat_association_show', {'id': association.id}) }}">
                                    {{ association }}</a>
                            </h4>
                            {% if not association.valider %}
                                <div class="d-block">
                              <span class="g-color-red g-font-size-default g-mr-3">
                                <i class="icon-shield"></i>
                              </span>
                                    <em class="g-color-gray-dark-v4 g-font-style-normal g-font-size-default">Non
                                        validée</em>
                                </div>
                            {% endif %}
                            <!-- End Figure Info -->
                        </div>

                        <hr class="g-brd-gray-light-v4 g-my-0">

                        <!-- Figure List -->

                        <!-- End Figure List -->
                        <hr class="g-brd-gray-light-v4 g-my-0">

                        <!-- Figure List -->

                        <!-- End Figure List -->
                    </figure>
                    <!-- End Figure -->
                </div>
                <div class="col-md-4 g-mb-30 g-mb-0--md">
                    <table class="table-bordered table">
                        <tr>
                            <td>
                                <a
                                        href="{{ path('volontariat_backend_association_edit', {'id': association.id}) }}">
                                    <i class="icon-pencil"></i> Modifier
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a
                                        href="{{ path('volontariat_backend_images_association', {'id': association.id}) }}">
                                    <i class="icon-picture"></i> Les images
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a
                                        href="{{ path('volontariat_backend_besoin', {'id': association.id}) }}">
                                    <i class="icon-heart"></i> Besoins en volontariat
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a
                                        href="{{ path('volontariat_backend_activite', {'id': association.id}) }}">
                                    <i class="icon-graduation"></i> Actualités
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a title="Supprimer" role="button" href="#" class="deleteassoc"
                                   data-toggle="modal"
                                   data-nom="{{ association.nom }}"
                                   data-id="{{ association.id }}"
                                   data-target="#associationDeleteModal">
                                    <i class="icon-trash"></i> Supprimer l'association
                                </a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        {% else %}
            <div class="col-md-6 ">
                <p>
                    Aucune,
                    <a href="{{ path('volontariat_backend_association_new') }}">
                        ajouter une fiche
                    </a>
                </p>
            </div>

        {% endfor %}

    </div>
    <!-- End Panel Body -->
</div>

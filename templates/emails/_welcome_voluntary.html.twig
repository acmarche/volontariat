{# templates/emails/signup.html.twig #}
{% apply inky_to_html %}
    <container>
        <row class="header">
            <columns>
                <spacer size="16"></spacer>
                <h1 class="text-center">Welcome {{ email.toName }}!</h1>
            </columns>

            <h1>Welcome {{ voluntary.name }}!</h1>

            <img src="{{ email.image('@images/logo/logo-1.png') }}" alt="Logo">

            <p>
                You signed up as {{ voluntary.email }} the following email:
            </p>
            <p><code>{{ password }}</code></p>

            <p>
                <a href="#">Click here to activate your account</a>
            </p>
        </row>
    </container>
{% endapply %}
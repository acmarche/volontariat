<!-- Partners -->
<section class="container g-py-100">
    <div class="u-heading-v6-2 text-center g-mb-60">
        <span class="d-block g-color-gray-dark-v4 g-font-weight-600 g-font-size-13 text-uppercase">Les derniers inscrits</span>
        <h2 class="h1 u-heading-v6__title g-brd-black g-color-black g-font-weight-600 mb-0">
            <a href="{{ path('volontariat_volontaire') }}"> Toutes les associations</a>
        </h2>
    </div>

    <div class="row no-gutters">
        {% for association in associations %}
            <div class="col-sm-6 col-lg-3">
                <!-- Partners -->
                <div class="g-brd-around g-brd-gray-light-v5 g-bg-white text-center">
                    <h4 class="g-font-weight-300 g-mb-15">
                        <a class="u-link-v5 g-color-main g-color-primary--hover"
                           href="{{ path('volontariat_association_show', {'id': association.id}) }}">
                            {{ association }}
                        </a>
                    </h4>
                    {#    <a class="d-block u-block-hover g-opacity-0_3 g-opacity-1--hover g-color-black g-transition-0_3 g-px-30 g-py-70"
                          href="{{ path('volontariat_association_show', {'id':association.id}) }}">
                        {% if association.imageName %}
                               <img class="img-fluid w-100"
                                    src="{{ association.imageName | acmarche_volontariat_download_image(association) | imagine_filter('acmarche_volontariat_200_100') }}"
                                    alt="{{ association.imageName }}">


                            <img class="u-block-hover__main--zoom-v1 u-block-hover__main--grayscale g-width-100"
                                 src="{{ asset('assets/img-temp/200x100/img2.jpg') }}"
                                 alt="Image Description">

                         <span class="d-block u-block-hover__additional--partially-slide-up py-2">
                  <span class="d-block h5 g-color-gray-dark-v5 mb-4">{{ association }}</span>
              </span>
                    </a>#}
                </div>
                <!-- End Partners -->
            </div>
        {% endfor %}
    </div>

    <div class="u-heading-v6-2 text-center g-mb-60">
        <span class="d-block g-color-gray-dark-v4 g-font-weight-600 g-font-size-13 text-uppercase">Les derniers inscrits</span>
        <h2 class="h1 u-heading-v6__title g-brd-black g-color-black g-font-weight-600 mb-0">

            <a href="{{ path('volontariat_volontaire') }}"> Tous les volontaires</a>
        </h2>
    </div>

    <div class="row no-gutters">
        {% for volontaire in volontaires %}
            <div class="col-sm-6 col-lg-3">
                <!-- Partners -->
                <div class="g-brd-around g-brd-gray-light-v5 g-bg-white text-center">
                    <h4 class="g-font-weight-300 g-mb-15">
                        <a class="u-link-v5 g-color-main g-color-primary--hover"
                           href="{{ path('volontariat_volontaire_show', {'id': volontaire.id}) }}">
                            {{ volontaire.surname }} de {{ volontaire.city }}
                        </a>
                    </h4>
                    <p>{{ volontaire.description }}</p>
                </div>
                <!-- End Partners -->
            </div>
        {% endfor %}
    </div>

</section>

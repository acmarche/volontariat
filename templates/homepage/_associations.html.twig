<div class="bg-white py-12">
    <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
        <div class="mx-auto max-w-2xl">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Nos associations</h2>
            <p class="mt-4 text-lg leading-8 text-gray-600">Rejoignez nous aussi.</p>
        </div>
        <ul role="list"
            class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            {% for association in associations %}
                {% set url = 'https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80' %}
                {% if association.imageName %}
                    {% set url = association.imageName | acmarche_volontariat_download_image(association) | imagine_filter('acmarche_volontariat_400_270') %}
                {% elseif association.firstImage %}
                    {% set url = association.firstImage.url | imagine_filter('acmarche_volontariat_400_270') %}
                {% endif %}
                <li>
                    <a href="{{ path('volontariat_association_show', {'slug': association.slug}) }}">
                        <img class="mx-auto h-56 w-56 rounded-full"
                             src="{{ url }}"
                             alt="">
                    </a>
                    <a href="{{ path('volontariat_association_show', {'slug': association.slug}) }}">
                        <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900">{{ association.name }}</h3>
                    </a>
                    <p class="mt-4  leading-7 text-gray-600">{{ association.description|u.truncate(450,'...')|nl2br }}</p>


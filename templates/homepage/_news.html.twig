<div class="bg-white py-12">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Actualit√©s</h2>
        </div>
        <section class="bg-gray-50 py-8">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Related Article Card 1 -->
                    {% for page in pages %}
                        {% set image = 'https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3603&q=80' %}
                        {% if page.firstImage %}
                            {% set image =  page.firstImage | imagine_filter('acmarche_volontariat_400_270') %}
                        {% endif %}
                        <a
                            class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300"
                            href="{{ path('volontariat_page_show', {'slug': page.slug}) }}">
                            <img class="h-48 w-full object-cover"
                                 src="{{ image }}"
                                 alt="Article thumbnail">
                            <div class="p-6">
                                <h4 class="font-bold text-lg text-gray-900 group-hover:text-cta-dark transition-colors">
                                    {{ page.title }}
                                </h4>
                                <p class="text-sm mb-1"> {{ page.excerpt }}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>
</div>

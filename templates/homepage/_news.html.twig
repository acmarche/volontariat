<section class="py-16 bg-gray-50">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-10 gap-4">
            <div>
                <h2 class="text-3xl font-bold text-gray-900">Actualités</h2>
                <p class="mt-2 text-gray-600">Les dernières nouvelles de notre communauté</p>
            </div>
            <a href=""
               class="inline-flex items-center text-emerald-600 font-semibold hover:text-emerald-700 transition-colors group">
                Toutes les actualités
                <svg class="ml-1 h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>

        {% if pages|length > 0 %}
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                {% for page in pages %}
                    {% set image = asset('bundles/acmarchevolontariat/images/img1.jpg') %}
                    {% if page.firstImage %}
                        {% set image = page.firstImage|imagine_filter('acmarche_volontariat_400_270') %}
                    {% endif %}

                    <article class="group bg-white rounded-2xl shadow-sm overflow-hidden hover:shadow-xl transition-all duration-300 {% if loop.first and pages|length > 2 %}lg:col-span-2 lg:row-span-2{% endif %}">
                        <a href="{{ path('volontariat_page_show', {'slug': page.slug}) }}" class="block h-full">
                            <div class="relative overflow-hidden {% if loop.first and pages|length > 2 %}h-64 lg:h-80{% else %}h-48{% endif %}">
                                <img src="{{ image }}"
                                     alt="{{ page.title }}"
                                     class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/0 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

                                <!-- Category badge -->
                                <div class="absolute top-4 left-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-white/90 text-emerald-700 backdrop-blur-sm">
                                        Actualité
                                    </span>
                                </div>
                            </div>
                            <div class="p-6 {% if loop.first and pages|length > 2 %}lg:p-8{% endif %}">
                                <div class="flex items-center gap-3 mb-3">
                                    <time class="text-sm text-emerald-600 font-medium" datetime="">
                                        01/10/2025
                                    </time>
                                </div>
                                <h3 class="font-bold text-gray-900 group-hover:text-emerald-600 transition-colors {% if loop.first and pages|length > 2 %}text-2xl lg:text-3xl{% else %}text-xl{% endif %}">
                                    {{ page.title }}
                                </h3>
                                <p class="mt-3 text-gray-600 line-clamp-2 {% if loop.first and pages|length > 2 %}lg:line-clamp-3{% endif %}">
                                    {{ page.excerpt }}
                                </p>

                                <!-- Read more link -->
                                <div class="mt-4 flex items-center text-emerald-600 font-medium text-sm opacity-0 group-hover:opacity-100 transition-opacity">
                                    Lire la suite
                                    <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                    </svg>
                                </div>
                            </div>
                        </a>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Pas d'actualités</h3>
                <p class="mt-1 text-sm text-gray-500">Les nouvelles actualités apparaîtront ici.</p>
            </div>
        {% endif %}
    </div>
</section>

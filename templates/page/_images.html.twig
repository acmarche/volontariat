<div class="row">
    {% for image in images %}
        <div class="col-md-3 g-mb-30">
            <a class="js-fancybox d-block u-block-hover" href="javascript:"
               data-fancybox="lightbox-gallery--03"
               data-src="{{ image.name | acmarche_volontariat_download_image(page) }}"
               data-speed="350"
               data-caption="Lightbox Gallery">
                <img
                        class="img-fluid u-block-hover__main--mover-right"
                        src="{{ image.name | acmarche_volontariat_download_image(page) }}"
                        alt="Image Description">
            </a>
        </div>
    {% endfor %}
</div>
<div class="row">
    {% for document in documents %}
        <div class="col-md-10 g-m2b-30">
            <a class="d-block u-block-hover" href="{{ document.name | acmarche_volontariat_download_image(page) }}">
                {{ document.name }}
            </a>
        </div>
    {% endfor %}
</div>

{% extends '@Volontariat/base.html.twig' %}
{% block title %}Inscription en tant qu'association{% endblock %}
{% block body %}

    <div class="hidden sm:block" aria-hidden="true">
        <div class="py-5 text-lg">J'inscris mon association
            <div class="border-t border-gray-200"></div>
        </div>
    </div>

    <div class="mt-10 sm:mt-0">
    <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
            <div class="px-4 sm:px-0">
                <h3 class="text-base font-semibold leading-6 text-gray-900">Informations</h3>
                <p class="mt-1 text-sm text-gray-600">
                    Tous les champs sont obligatoires
                </p>
            </div>
        </div>

        <div class="mt-5 md:col-span-2 md:mt-0">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="overflow-hidden shadow sm:rounded-md">
                <div class="bg-white px-4 py-5 sm:p-6">
                    <div class="grid grid-cols-6 gap-6">
                        <div class="col-span-6 sm:col-span-4">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.name) }}
                        </div>

                        <div class="col-span-3 sm:col-span-3">
                            {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.address) }}
                            {{ form_widget(form.address, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.address) }}
                        </div>

                        <div class="col-span-2 sm:col-span-1">
                            {{ form_label(form.postalCode, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.postalCode) }}
                            {{ form_widget(form.postalCode, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.postalCode) }}
                        </div>

                        <div class="col-span-2 sm:col-span-2">
                            {{ form_label(form.city, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.city) }}
                            {{ form_widget(form.city, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.city) }}
                        </div>

                        <div class="col-span-6 sm:col-span-3">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.email) }}
                        </div>

                        <div class="col-span-6 sm:col-span-3">
                            {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.phone) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.phone) }}
                        </div>

                        <div class="col-span-6">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium leading-6 text-gray-900'}}) }}
                            {{ form_errors(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'mt-2 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                            {{ form_help(form.description) }}
                        </div>

                    </div>

                    <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
                        <button type="submit"
                                class="inline-flex justify-center rounded-md bg-green-default py-2 px-3 text-sm font-semibold text-white shadow-sm hover:bg-green-light focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">
                            J'inscris mon association
                        </button>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}
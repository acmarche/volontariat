{% extends '@Volontariat/base.html.twig' %}
{% block title %}Les volontaires{% endblock %}
{% block body %}

    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                Nos {{ volontaires|length }} volontaires
            </h2>
            <p class="mt-6 text-lg leading-8 text-gray-600">

            </p>
        </div>
        <ul role="list"
            class="mx-auto mt-20 grid max-w-2xl grid-cols-2 gap-y-16 gap-x-8 text-center sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-5 xl:grid-cols-6">
            {% for volontaire in volontaires %}
                <li>
                    {% if volontaire.imageName %}
                        <img class="mx-auto h-24 w-24 rounded-full"
                             src="{{ vich_uploader_asset(volontaire, 'image') | imagine_filter('acmarche_volontariat_index') }}"
                             alt="">
                    {% else %}
                        <svg class="mx-auto  rounded-full h-12 w-12 text-gray-300" fill="currentColor"
                             viewBox="0 0 24 24">
                            <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    {% endif %}

                    <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900">
                        <a href="{{ path('volontariat_volontaire_show', {'uuid':volontaire.uuid}) }}">
                            {{ volontaire.surname }}
                        </a>
                    </h3>
                    <p class=" leading-6 text-gray-600">
                        De {{ volontaire.city }}
                    </p>
                </li>
            {% endfor %}
        </ul>
    </div>


{% endblock %}
{% extends '@Volontariat/base.html.twig' %}
{% block title %}Les volontaires{% endblock %}
{% block body %}

    <div class="overflow-hidden bg-white py-12 sm:py-8">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div
                class="mx-auto grid max-w-2xl grid-cols-1 gap-y-16 gap-x-8 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">
                <div class="lg:pr-8 lg:pt-4">
                    <div class="lg:max-w-lg">
                        <h2 class="text-base font-semibold leading-7 text-indigo-600">Nos volontaires</h2>
                        <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                            Le point de rencontre entre volontaires et associations.
                        </p>
                        <p class="mt-6 text-lg leading-8 text-gray-600">
                            Vous êtes déjà {{ volontaires|length }} inscrits!
                        </p>
                        <dl class="mt-10 max-w-xl space-y-8 text-lg leading-7 text-gray-600 lg:max-w-none">
                            <div class="relative pl-9">
                                <dd class="flex">
                                    <a href="{{ path('volontariat_register_association') }}">
                                        Vous êtes une association qui a besoin de volontaires ?
                                        Inscrivez-vous sur notre plateforme pour les contacter !
                                    </a>
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>
                <img src="{{ asset('bundles/acmarchevolontariat/images/Volunteering-pana.svg') }}"
                     alt="Product screenshot"
                     class="w-[34rem] max-w-none rounded-xl shadow-xl ring-1 ring-gray-400/10 sm:w-[34rem] md:-ml-4 lg:-ml-0"
                     width="2432" height="1442">
            </div>
        </div>
    </div>
{% endblock %}

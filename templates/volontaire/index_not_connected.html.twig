{% extends 'base.html.twig' %}

{% block stylesheets %}

{% endblock %}

 {% block breadcrumbs %}
     {% include 'base/breadcrumbs.html.twig' with {'title': 'Les volontaires'} %}
 {% endblock %}

{% block body %}
    <section class="container g-pt-20">

        {% if volontaires | length > 0 %}
            <div class="clearfix"></div>
        {% endif %}
        <div class="row g-mb-40">
            {% for volontaire in volontaires %}
                <div class="col-md-4 g-mb-30 g-mb-0--md">
                    <!-- Figure -->
                    <figure class="g-bg-white g-brd-around g-brd-gray-light-v4 g-brd-cyan--hover g-transition-0_2 text-center">
                        <div class="g-py-40 g-px-20">
                            <!-- Figure Image -->
                            <h4 class="h5 g-mb-5"><a
                                        href="{{ path('volontariat_volontaire_show', {'id': volontaire.id}) }}">{{ volontaire.surname }}</a>
                            </h4>
                            <div class="d-block">
                      <span class="g-color-cyan g-font-size-default g-mr-3">
                       <i class="icon-location-pin"></i>
                      </span>
                                <em class="g-color-gray-dark-v4 g-font-style-normal g-font-size-default">{{ volontaire.city }}</em>
                            </div>
                            <!-- End Figure Info -->
                        </div>


                        <!-- End Figure List -->
                    </figure>
                    <!-- End Figure -->
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block scripts %}

{% endblock %}
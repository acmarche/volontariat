{% extends '@Volontariat/base.html.twig' %}

{% block breadcrumbs %}
    {% set url = path('volontariat_volontaire') %}
    {% include '@Volontariat/base/breadcrumbs.html.twig' with {'title': '', 'parent':'Volontaires', 'parent_url': url} %}
{% endblock %}

{% block body %}
    <section class="g-py-20">
        <div class="container">
            <div class="g-brd-around g-brd-gray-light-v4 g-pa-20 g-mb-40">
                <div class="row">
                    <div class="col-lg-8">
                        <!-- User Details -->
                        <div class="d-flex align-items-center justify-content-sm-between g-mb-5">
                            <h2 class="g-font-weight-300 g-mr-10">{{ volontaire.surname }} de {{ volontaire.city }}</h2>
                        </div>
                        <!-- End User Details -->
                        <div class="alert alert-info">
                            Pour consulter ses coordonnées,
                                vous devez être inscrit sur la plate-forme en tant que association.
                        </div>
                        <!-- User Position -->

                        {% include '@Volontariat/volontaire/_contact.html.twig' %}

                        <!-- End User Position -->

                        <!-- End User Info -->

                        <hr class="g-brd-gray-light-v4 g-my-20">


                        <hr class="g-brd-gray-light-v4 g-my-20">

                        <h3 class="h5 g-color-gray-dark-v1 g-mb-10">Il a choisi les secteurs suivants</h3>

                        <ul class="list-unstyled g-mb-12 g-mb-0--md">
                            {% for secteur in volontaire.secteurs %}
                                <li class="d-flex align-items-center g-mb-12">
                                    <i class="icon-check d-block g-color-primary g-mr-8"></i>
                                    <span class="d-block">{{ secteur }}</span>
                                </li>
                            {% endfor %}
                        </ul>


                        {% include '@Volontariat/backend/volontaire/associations_communes.html.twig' %}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
